[Unit]
Description=Pharaoh OS Session Launcher
After=systemd-user-sessions.service network.target

[Service]
User=pharaoh
Environment=WAYLAND_DISPLAY=wayland-0
Environment=XDG_RUNTIME_DIR=/run/user/1000
PAMName=login
TTYPath=/dev/tty1
TTYReset=yes
TTYVHangup=yes
ExecStart=/usr/local/bin/pharaoh-session
Restart=on-failure
RestartSec=3

[Install]
WantedBy=graphical.target
